<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp">

    <com.framework.common.view.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:paddingTop="18dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="5dp"
        app:rv_strokeColor="@color/divide_color"
        app:rv_strokeWidth="1px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/red_dot"
                android:drawablePadding="10dp"
                android:text="2018年02月16日 15:45"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="0.0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/state_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/arrow_right"
                android:text="等待乘车"
                android:textColor="@color/gray_b5b5b5"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/up_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/red_dot"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="深圳市软件产业基地"
            android:textColor="@color/gray_b5b5b5"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/down_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5dp"
            android:drawableLeft="@drawable/red_dot"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="广东省深圳市宝安区福永镇深圳宝安国际机场A出口"
            android:textColor="@color/gray_b5b5b5"
            android:textSize="@dimen/sp_15" />
    </com.framework.common.view.roundview.RoundLinearLayout>

</LinearLayout>
