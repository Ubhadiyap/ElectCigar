<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/theme_green"
        >
        <include
            layout="@layout/common_title"
            />
        <EditText
            android:id="@+id/input"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/send_txt"
            android:layout_toRightOf="@+id/input"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="发送"
            android:gravity="center"
            android:visibility="gone"
            />
        <FrameLayout
            android:id="@+id/center_area"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_round_data"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_4a4a4a"
                    android:text="今日口数"
                    />
                <TextView
                    android:id="@+id/today_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/theme_green"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/bluetooth_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_878787"
                    android:text="蓝牙未连接"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/oil_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:text="烟油25%"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/home_icon_smoke"
            android:drawablePadding="10dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/battery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:text="电量25%"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/home_icon_battery"
            android:drawablePadding="10dp"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/center_area"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计口数"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                />
            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="220dp"
        android:horizontalSpacing="1px"
        android:verticalSpacing="1px"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        />
</LinearLayout>
